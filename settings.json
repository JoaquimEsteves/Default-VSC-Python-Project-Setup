{
    // Necessary Extensions
    // Python; Window Colors, Bracket Pair Colorizer 2
    "workbench.colorCustomizations": {
        "activityBar.background": "#342B2A",
        "titleBar.activeBackground": "#493D3A",
        "titleBar.activeForeground": "#FBFAFA"
    },
    "editor.rulers": [80,120],
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--config-file=${workspaceFolder}/setup.cfg"
    ],
    "python.linting.enabled": true,
    "python.pythonPath": "/CLEARLY/FAKE/PATH/TO/PYTHON",
}
